Album name: <%=@album.name%>
Photo: <%=@photos.count%>
<div class="row">
	<% if current_user==@album.user %>
		<div class="col-md-3">
			<%=link_to (image_tag "/uploads/plus.png",size: "200x200"),new_photo_path(album_id: @album.id) %>
		</div>
	<% end %>
	<% @photos.each do |photo| %>
		<div class="col-md-3">
			<%=link_to (image_tag photo.image,size: "200x200"),photo %>
		</div>
	<% end %>
</div>

