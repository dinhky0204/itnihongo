<div class="row">
	<div class="col-md4 col-md-offset-4">
		<%=image_tag @user.avatar,size: "200x200"%>
		<div><%=@user.first_name+' '+@user.last_name%></div>
	</div>
</div>
<div>
	<div class="col-md-6">
		<%=@photos.count%> photos
		<% @pets.each do |pet| %>
			<%=link_to pet.name,pet,class: "btn btn-default"%>
		<% end %>
		<br>
		<% @photos.each do |photo| %>
			<div>
				<%=link_to (image_tag photo.image,size: "100x100"),photo%>
				Like: <%=photo.like_numbers%>
				Comment: <%=photo.comment_numbers%>
				User: <%=image_tag photo.owner_avatar,size: "50x50"%><%=photo.owner_last_name%>
			</div>
			
		<% end %>
	</div>
	<div class="col-md-6">
		<%=link_to 'Followed pets',follow_path(@user),class: "btn btn-info"%>
		<%=link_to 'プロフィール編集',edit_user_registration_path,class: "btn btn-success"%>
		<%=link_to 'ペットを登録',new_pet_path, class: "btn btn-warning" %>
	</div>
</div>


