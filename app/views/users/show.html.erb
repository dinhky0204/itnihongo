<div class="container personal-page">
  <div class="user-info">
    <div class="row user-info-header">
      <div class="avatar">
        <%=image_tag @user.avatar,size: "200x200"%>
      </div>
      <div class="profile-button">
        <%=link_to t('user_page.edit_profile'),edit_user_registration_path,class: "btn btn-default btn-edit-profile"%>
      </div>
    </div>

    <div class="row info">
      <h2><b><%=@user.first_name+' '+@user.last_name%></b></h2>
    </div>
  </div>
  &nbsp;
  <div class="row menu-controll">
    <div class="col-sm-6 col-md-6 col-lg-6">
      <ul class="image-category">
        <li><a href=""><%=@photos.count.to_s+' '+t('user_page.image_text')%></a></li>
        <% @pets.each do |pet| %>
            <li><%=link_to pet.name,pet%></li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6 text-align-right">
      <%=link_to t('user_page.follow_pets'),follow_path(@user),class: "btn btn-info"%>
      <%=link_to t('user_page.create_pet'),new_pet_path, class: "btn btn-warning btn-pet-register" %>
    </div>
  </div>
  &nbsp;
  <div class="row">
    <%= render "photos/all_photo", photo: @photos %>
  </div>
</div>



