<div class="row">
	<div class="col-md4 col-md-offset-4">
		<%=image_tag @user.avatar,size: "200x200"%>
		<div><%=@user.first_name+' '+@user.last_name%></div>
	</div>
</div>
<div>
	<div class="col-md-6">
		<%=@photos.count%> pets
		<% @pets.each do |pet| %>
			<%=link_to pet.name,pet%>
		<% end %>
	</div>
	<div class="col-md-6">
		<%=link_to 'プロフィール編集',edit_user_registration_path,class: "btn btn-success"%>
		<%=link_to 'ペットを登録',new_pet_path, class: "btn btn-warning" %>
	</div>
</div>


