<div class="container">
  <h2>プロフィール編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4">
          <div class="field">
            <%= f.hidden_field :email%>
          </div>

          <div class="field">
            <%= cl_image_tag(current_user.avatar||default_image, size: "250x250") if current_user.avatar%>
            <br><br>
            <%= f.file_field :avatar%>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>
        <div class="col-sm-8 col-md-8 col-lg-8">
          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.first_name')%>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.text_field :first_name, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.last_name') %>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.text_field :last_name, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.gender')%> <br><br>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              男<%= f.radio_button :gender,1,checked: true %>
              女<%= f.radio_button :gender,0 %>
            </div>
          </div>

          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.birthday') %>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.date_select :birthday, {start_year: 1917, end_year: 2002}, {class: "form-control date-select"} %>
            </div>
          </div>

          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.address') %>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.text_field :address, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.other_info')%>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.text_area :other_info, row: 5, class: "form-control"%>
            </div>
          </div>
          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.password') %>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> characters minimum</em><br>
              <% end %>
              <i>(leave blank if you don't want to change it)</i><br />
            </div>
          </div>

          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.password_confirmation') %>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="field row">
            <div class="col-sm-4 col-md-4 col-lg-4">
              <%= t('common.current_password')%>
            </div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
              <i>(we need your current password to confirm your changes)</i><br />
            </div>
          </div>

          <div class="actions">
            <div class="col-sm-4 col-md-4 col-lg-4"></div>
            <div class="col-sm-7 col-md-7 col-lg-7">
              <%= f.submit "編集".html_safe, class: "btn btn-info" %>
            </div>
          </div>
        </div>
      </div>




  <% end %>

  <!-- <h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->
</div>