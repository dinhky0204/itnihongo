
<div class="container">
  <div class="brand center-align">
    <i class="fa fa-camera" aria-hidden="true" style="font-size: 50px"></i>
    <h2>可愛いペット</h2>
  </div>
  <div class="col-sm-6 col-md-6 col-lg-6 center-block">
    <%= devise_error_messages! %>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6 center-block">
      <h3>Forgot your password?</h3>
      <form action="<%= password_path(resource_name)%>" class="new_user" id="new_user" accept-charset="UTF-8" method="post">
        <div class="form-group">
          <label for="user_email">Email</label>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
            <input autofocus="autofocus" type="email" name="user[email]" id="user_email" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Send me reset password instructions" data-disable-with="Send me reset password instructions" class="form-control bg-black text-white">
          <p><%= link_to "Log in", new_session_path(resource_name) %> <%= link_to "Sign up", new_registration_path(resource_name) %></p>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
    </div>
  </div>
</div>
