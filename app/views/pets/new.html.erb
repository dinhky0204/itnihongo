ペットを登録
<%= form_for @pet do |f| %>	
  <div class="row">
    <div class="col-md-4">
      <div class="field">    
        <%= f.hidden_field :user_id,value: current_user.id %>
      </div>
      <div class="field">
        <%= f.label :avatar %>    
        <%= image_tag(@pet.avatar, size: "250x250") if @pet.avatar%>
        <%= f.file_field :avatar%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :kind %><br />
        <%= f.collection_select :kind_id,Kind.all,:id,:name %>
      </div>
      
      <div class="field">
        <%= f.label :gender %><br />
        男<%= f.radio_button :gender,1,checked: true %>
        女<%= f.radio_button :gender,0 %>
      </div>
      
      <div class="field">
        <%= f.label :birthday %><br />
        <%= f.date_select :birthday, start_year: 1917, end_year: 2002 %>
      </div>
      
      <div class="field">
        <%= f.label :weight %><br />
        <%= f.number_field :weight%>
      </div>

      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description%>
      </div>
      <div class="actions">
        <%= f.submit "新規" %>
      </div>
    </div>
  </div>
    

  
<% end %>