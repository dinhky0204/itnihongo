<div class="container">
  <div class="row center-align">
    <h1><b>可愛いペット</b></h1>
    <h3>Everyone can upload pet's photo </h3>
    <a href="">Submit a photo</a>
  </div>
  &nbsp;
  <ul class="main-photos">
    <% @photos.each do |photo| %>
        <li class="col-sm-4">
          <div class="image-box">
            <img src="<%= photo.image %>" alt="" class="main-img">
            <div class="image-info">
              <div class="like-box self-hover">
                <i class="fa fa-heart" aria-hidden="true"></i>
                122
              </div>
              <div class="comment-box self-hover">
                <i class="fa fa-comments-o" aria-hidden="true"></i>
                123
              </div>
              <div class="user-box self-hover">
                <a href=""><img src="<%= photo.image %>" alt=""></a>
                <a href="" class="text-white"><%= current_user.first_name+' '+current_user.last_name%></a>
              </div>
              <div class="download-box self-hover">
                <i class="fa fa-download" aria-hidden="true"></i>
              </div>
            </div>
          </div>
        </li>
    <% end %>
  </ul>
</div>